            value: "Application",
            uri: "dmx.app",
            data_type_uri: "dm4.core.composite",
            label_config: [ "dmx.app.name" ],
            assoc_defs: [
                {
                    part_type_uri:         "dmx.app.name",
                    assoc_type_uri:        "dm4.core.composition_def",
                    part_cardinality_uri:  "dm4.core.one"
